<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LetsYouInActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/back_button"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame"
        android:layout_below="@id/back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/image_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:text="Let's you in"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lets_you_in_tv"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:text="Continue with Facebook"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lets_you_in_tv"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="30dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/facebookbtn"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Continue with Google"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebookbtn"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/google"
        android:drawablePadding="28dp"
        android:paddingHorizontal="39dp"
        android:id="@+id/google_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:text="Continue with Apple"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/google_btn"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/apple"
        android:drawablePadding="30dp"
        android:paddingHorizontal="42dp"
        android:id="@+id/apple_btn"
        />

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apple_btn"
        android:layout_marginHorizontal="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/frame_or"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CAC5C5"
            android:paddingVertical="1dp"
            android:paddingHorizontal="150dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:background="#FDF9F9"
            />

    </FrameLayout>


    <Button
        android:id="@+id/button"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_or"
        android:backgroundTint="#246BFD"
        android:text="Sign in with password"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        />



        <TextView
            android:textColor="#978B8B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account ?"
            android:id="@+id/text"
            android:layout_below="@id/button"
            android:layout_marginStart="100dp"
            />

        <TextView
            android:layout_below="@id/button"
            android:textColor="#173AE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Sign up"
            android:gravity="center_horizontal"
            android:layout_toEndOf="@id/text"
            android:textStyle="bold"
            />




</RelativeLayout>