<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonActivity1"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person1_image"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border"
        android:id="@+id/frame_layout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thousands of doctors  experts to help your health!"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_marginHorizontal="24dp"
                android:textColor="#246BFD"
                android:id="@+id/text"
                android:layout_marginVertical="20dp"
                />

            <ImageView
                android:layout_below="@+id/text"
                android:id="@+id/progres_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progres_image1"
                android:layout_centerHorizontal="true"
                />


            <Button
                android:id="@+id/nextBtnPerson1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/progres_image"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:backgroundTint="#246BFD"
                android:text="Next"
                android:textSize="26sp" />


        </RelativeLayout>




    </FrameLayout>

</RelativeLayout>